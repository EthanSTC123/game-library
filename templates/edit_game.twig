<!DOCTYPE html>
<html>
<head>
    <title>Edit Game - Game Library</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

<!-- Navigation bar -->
<nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="dashboard.php"> Game Library</a>
        <div>
            <a href="dashboard.php" class="btn btn-sm btn-outline-light me-2">Dashboard</a>
            <a href="games.php" class="btn btn-sm btn-outline-light me-2">My Games</a>
            <a href="search_games.php" class="btn btn-sm btn-outline-light me-2">Search</a>
            <a href="add_game.php" class="btn btn-sm btn-outline-light me-2">Add Game</a>
            <a href="logout.php" class="btn btn-sm btn-outline-light">Logout</a>
        </div>
    </div>
</nav>

<div class="container mt-5">
    <h1>Edit Game</h1>

    {% if errors %}
        <div class="alert alert-danger">
            {% for error in errors %}
                {{ error }}<br>
            {% endfor %}
        </div>
    {% endif %}

    <form method="POST">

        <input type="hidden" name="game_id" value="{{ game.id }}">

        <label> Title:</label>
        <input type="text" name="title" class="form-control mb-2" value="{{ game.title }}" >

        <label>Genre:</label>
        <input type="text" name="genre" class="form-control mb-2" value="{{ game.genre }}">

        <label>Platform:</label>
        <input type="text" name="platform" class="form-control mb-2" value="{{ game.platform }}">

        <label> Release Date:</label>
        <input type="date" name="release_date" class="form-control mb-2" value="{{ game.release_date }}">

        <label> Rating (1-10):</label>
        <input type="number" name="rating" class="form-control mb-2" min="1" max="10" value="{{ game.rating }}">

        <label> Hours Played:</label>
        <input type="number" name="hours_played" class="form-control mb-2" min="0" value="{{ game.hours_played }}">

        <label> Status:</label>
        <select name="status" class="form-select mb-3" required>
            <option value="Backlog" {% if game.status == 'Backlog' %}selected{% endif %}>Backlog</option>
            <option value="Playing" {% if game.status == 'Playing' %}selected{% endif %}>Playing</option>
            <option value="Completed" {% if game.status == 'Completed' %}selected{% endif %}>Completed</option>
            <option value="Wishlist" {% if game.status == 'Wishlist' %}selected{% endif %}>Wishlist</option>
        </select>

        <div class="mb-3">
            <label>Notes:</label>
            <textarea name="notes" class="form-control" rows="4">{{ game.notes }}</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Update Game</button>
    </form>
</div>

</body>
</html> 