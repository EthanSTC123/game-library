<!DOCTYPE html>
<html>
<head>
    <title>Add Game - Game Library</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <!-- Navigation bar -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="dashboard.php"> Game Library</a>
            <div>
                <a href="dashboard.php" class="btn btn-sm btn-outline-light me-2">Dashboard</a>
                <a href="search_games.php" class="btn btn-sm btn-outline-light me-2">Search</a>
                <a href="add_game.php" class="btn btn-sm btn-outline-light me-2">Add Game</a>
                <a href="logout.php" class="btn btn-sm btn-outline-light">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h1>Add New Game</h1>

        {% if errors %}
            <div class="alert alert-danger">
                {% for error in errors %}
                    {{ error }}<br>
                {% endfor %}
            </div>
        {% endif %}

        <form method="POST">
            <label> Title:</label>
            <input type="text" name="title" class="form-control mb-2" required>

            <label>Genre:</label>
            <input type="text" name="genre" class="form-control mb-2" required>

            <label> Platform:</label>
            <input type="text" name="platform" class="form-control mb-2" required>

            <label> Release Date:</label>
            <input type="date" name="release_date" class="form-control mb-2" required>

            <label> Rating (1-10):</label>
            <input type="number" name="rating" class="form-control mb-2" min="1" max="10" required>

            <label> Hours Played:</label>
            <input type="number" name="hours_played" class="form-control mb-2" min="0" required>

            <label> Status:</label>
            <select name="status" class="form-select mb-3" required>
                <option value="Backlog">Not Started</option>
                <option value="Playing">Playing</option>
                <option value="Completed">Completed</option>
                <option value="Wishlist">Dropped</option>
            </select>

            <button type="submit" class="btn btn-primary">Add Game</button>
        </form>
    </div>
</body>
</html>